@model Vidloq.Models.Cliente
@{
    ViewBag.Title = "Dados";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Nome</h2>
<ul>
    <li>Plano: @Model.Plano.Titulo</li>
        @if (Model.DataNascimento.HasValue)
        {
        <li>Data de Nascimento: @Model.DataNascimento.Value.ToShortDateString()</li>
        }
</ul>