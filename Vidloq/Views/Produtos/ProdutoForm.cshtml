@model Vidloq.ViewModels.ProdutoFormViewModel
@{
    ViewBag.Title = Model.Acao;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Acao Jogo</h2>

@using (@Html.BeginForm("Salvar", "Produtos"))
{
<div class="form-group">
    @Html.LabelFor(m => m.Produto.Titulo)
    @Html.TextBoxFor(m => m.Produto.Titulo, new { @class = "form-control"})
    @Html.ValidationMessageFor(m => m.Produto.Titulo, "", new {@class = "text-danger"})
</div>

<div class="form-group">
    @Html.LabelFor(m => m.Produto.CategoriaId)
    @Html.DropDownListFor(m => m.Produto.CategoriaId, new SelectList(Model.Categorias, "CategoriaId", "Titulo"), "Selecione uma categoria", new { @class = "form-control"})
    @Html.ValidationMessageFor(m => m.Produto.CategoriaId, "", new {@class = "text-danger"})
</div>

<div class="form-group">
    @Html.LabelFor(m => m.Produto.DataLancamento)
    @Html.TextBoxFor(m => m.Produto.DataLancamento, "{0:dd/MM/yyyy}", new { @Value = DateTime.Now.ToShortDateString(), @class = "form-control"})
    @Html.ValidationMessageFor(m => m.Produto.DataLancamento, "", new {@class = "text-danger"})
</div>

<div class="form-group">
    @Html.LabelFor(m => m.Produto.QtDisponivel)
    @Html.TextBoxFor(m => m.Produto.QtDisponivel, new { @Value = "1", @class = "form-control"})
    @Html.ValidationMessageFor(m => m.Produto.QtDisponivel, "", new {@class = "text-danger"})
</div>


    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.Produto.ProdutoId)
<button type="submit" class="btn btn-primary">Salvar</button>

}

@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}